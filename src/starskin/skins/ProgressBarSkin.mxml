<!--- The Spark skin class for the MX ProgressBar component.

@see mx.controls.ProgressBar

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" minWidth="100">

	<fx:Script>
		/**
		 * @private
		 */
		override protected function initializationComplete():void
		{
			useChromeColor = true;
			super.initializationComplete();
		}
	</fx:Script>

	<!-- layer 1: fill -->
	<s:Rect left="1" right="1" top="1" bottom="1" radiusX="3">
		<s:fill>
			<s:LinearGradient rotation="0">
				<s:GradientEntry color="0x50C8EF" alpha="1" />
				<s:GradientEntry color="0x15EAEA" alpha="1" />
			</s:LinearGradient>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0xffffff" alpha="0.5" />
		</s:stroke>
	</s:Rect>

</s:SparkSkin>
